                        </svg>
                    </span>
                    <span class="text-black background">Q&A</span>
                </a>
            </div>
            <input type="checkbox" class="peer hidden" id="navbar-open" />
            <label class="absolute top-5 right-7 cursor-pointer xl:hidden" for="navbar-open">
                <span class="sr-only">Toggle Navigation</span>
                <i class='bx bx-menu-alt-right text-2xl w-6 h-6 background'></i>
            </label>
            <nav aria-label="Header Navigation"
                class="h-full peer-checked:max-md:mt-8 peer-checked:max-h-full flex max-h-0 flex-col items-center justify-between overflow-hidden transition-all xl:max-h-full xl:flex-row xl:items-start">
                <ul class="flex items-center max-md:flex-col max-md:w-full gap-6">
                    <% categories.forEach((categories)=> { %>
                        <li
                            class="text-gray-600 background hover:text-blue-600 flex flex-col justify-between md:items-center w-full py-4 h-full dropdown">
                            <a href="#" class="truncate w-full flex flex-row items-center">
                                <%= categories.name %>
                                    <i class='bx bx-chevron-down'></i>
                            </a>
                            <div class="absolute max-md:relative top-4 md:top-24 xl:top-14 text-black bg-slate-100 rounded group hidden">
                                <ul>
                                    <% categories.subCategories.forEach((subCategories)=> { %>
                                        <li class="py-3 px-6 md:w-56 w-full hover:bg-blue-600 hover:text-white">
                                            <a href="">
                                                <%= subCategories.name %>
                                            </a>
                                        </li>
                                        <% }) %>
                                </ul>
                            </div>
                        </li>
                        <% }) %>
                            <li>
                                <% if(user==undefined) { %>
                                    <a href="/User/Login">
                                        <div class="text-gray-600 xl:mr-12 hover:text-blue-600">
                                            <button
                                                class="py-1.5 w-36 bg-blue-600 rounded transition hover:bg-blue-700 text-white">Login
                                            </button>
                                        </div>
                                    </a>
                                    <% } %>
                                        <% if(user!=undefined) { %>
                                            <div
                                                class="rounded-full cursor-pointer w-[40px] h-[40px] bg-[url(https://yt3.ggpht.com/Bfy85TE68rrQ4fQL1dTXEwqwCgbpmYmAEzM2nNNKzwOBGbXITKs_gRt1dEX1WTZAoXYbuANDAQ=s68-c-k-c0x00ffffff-no-rj)] bg-center bg-cover">
                                            </div>
                                            <% } %>
                            </li>
                </ul>
            </nav>
        </div>
    </header>
</div>

<style>
    body {
        background: white;
    }
</style>

<script>

    document.addEventListener('DOMContentLoaded', function () {
        const background = document.querySelectorAll('.background');
        const backgroundBG = document.querySelectorAll('.backgroundBG');

        const bgColor = window.getComputedStyle(document.querySelector('body')).backgroundColor;

        if (bgColor === 'rgb(0, 0, 0)') {
            for (let index = 0; index < background.length; index++) {
                background[index].classList.remove('text-black');
                background[index].classList.add('text-white');
            }

            for (let index = 0; index < backgroundBG.length; index++) {
                backgroundBG[index].classList.remove('bg-white');
                backgroundBG[index].classList.add('bg-black');
            }
        } else if (bgColor === 'rgb(255, 255, 255)') {
            for (let index = 0; index < background.length; index++) {
                background[index].classList.remove('text-white');
                background[index].classList.add('text-black');
            }

            for (let index = 0; index < backgroundBG.length; index++) {
                backgroundBG[index].classList.remove('bg-black');
                backgroundBG[index].classList.add('bg-white');
            }
        }
    });



</script>

