<%- include ('../partials/header.ejs') %>

  <body>
    <%- include ('../partials/menu.ejs') %>

      <section class="grid grid-cols-3 auto-rows-[298px]">
        <div class="bg-neutral-100 flex flex-col rounded-xl p-5 m-4 xl:col-span-1 col-span-3 xl:row-span-1 justify-evenly">
         <div class="flex items-center justify-between">
          <div class="w-[50vw]">
            <h3 class="text-3xl font-bold text-2xl text-gray-600">Top 1</h3>
            <p class="text-lg text-gray-300">Respostas com verificado</p>
          </div>
          <a href="">
            <button class="bg-slate-600 px-10 rounded py-3 hover:bg-slate-700 transition text-white truncate">Ver mais...</button>
          </a>
         </div>

          <div class="w-4/5 flex items-center gap-5 max-sm:flex-col max-sm:justify-center max-sm:w-full">
            <div class="w-20 h-20 border border-gray-400 rounded-full bg-[url('https://yt3.ggpht.com/Bfy85TE68rrQ4fQL1dTXEwqwCgbpmYmAEzM2nNNKzwOBGbXITKs_gRt1dEX1WTZAoXYbuANDAQ=s68-c-k-c0x00ffffff-no-rj')]"></div>
            <div class="flex items-center gap-2 text-gray-500 text-lg truncate
            ">Davi Alves <i class='bx bx-badge-check text-blue-400'></i></div>
          </div>
        </div>
        <div class="bg-neutral-100 border-2 rounded-xl p-2 m-4 xl:col-span-1 col-span-3 xl:row-span-1">
        </div>
        <div class="bg-neutral-100 border-2 rounded-xl p-5 m-4 xl:col-span-1 col-span-3 row-span-3 overflow-y-auto">

          <div class="flex mb-3">
            <div class="<% if(user == undefined) { %> dropdown <%}%> w-full">
              <a href="/Question/New" class="flex items-center justify-between">
                <button class="py-2 px-5 border border-1 border-gray-300 rounded transition danger truncate">Nova pergunta</button>
                <h3 class="text-gray-300 truncate">Recente</h3>
              </a>

              <div class="bg-white p-2 absolute underline text-blue-900 hidden group">
                <a href="/User/Login">Fazer login</a>
              </div>
            </div>
          </div>

          <% if (questions==undefined) { %>
            <div class="flex items-center justify-center h-full text-neutral-300">Sem dados</div>
            <% } %>
              <% questions.forEach(question=> { %>
                <a href="/Question/<%= question.id %> %>">
                  <div class="w-full p-3 rounded-xl bg-neutral-200 mb-2">
                    <h3 class="text-xl text-gray-600 truncate">
                      <%= question.name %>
                    </h3>
                    <h4 class="font-bold py-2 text-gray-400 truncate">
                      <% if (question.subCategory==null) { %>
                        <%= question.Category.name %>
                          <% } else { %>
                            <%= question.subCategory.name %>
                              <% } %>
                    </h4>
                  </div>
                </a>
                <% }) %>

        </div>
        <div class="bg-neutral-100 border-2 rounded-xl p-2 m-4 xl:col-span-2 col-span-3 xl:row-span-1">
          <h3 class="text-xl text-gray-600">4</h3>
          <p class="font-bold text-2xl">B</p>
        </div>
        <div class="bg-neutral-100 border-2 rounded-xl p-2 m-4 xl:col-span-1 col-span-3 xl:row-span-1">
          <h3 class="text-xl text-gray-600">5</h3>
          <p class="font-bold text-2xl">B</p>
        </div>
        <div class="bg-neutral-100 border-2 rounded-xl p-2 m-4 xl:col-span-1 col-span-3 xl:row-span-1">
          <h3 class="text-xl text-gray-600">6</h3>
          <p class="font-bold text-2xl">B</p>
        </div>
      </section>


      <script src="dropdown.js"></script>

  </body>
  <%- include ('../partials/footer.ejs') %>